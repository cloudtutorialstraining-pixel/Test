package parser;

import java.nio.file.*;
import java.util.List;

public class NotepadScenarioTest {

    public static void main(String[] args) throws Exception {

        String storyKey = "WCLCARAPI-5778";

        String content = Files.readString(
                Path.of("C:/temp/scenario.txt"));

        List<ScenarioParser.Scenario> scenarios =
                ScenarioParser.parse(storyKey, content);

        System.out.println("Scenarios found: " + scenarios.size());
        System.out.println("------------------------------------------------");

        for (ScenarioParser.Scenario s : scenarios) {

            System.out.println("Scenario: " + s.name);
            System.out.println("Outline: " + s.isOutline);

            System.out.println("Steps:");
            for (String step : s.steps) {
                System.out.println("  " + step);
            }

            if (!s.examples.isEmpty()) {
                System.out.println("Examples:");
                for (String ex : s.examples) {
                    System.out.println("  " + ex);
                }
            }

            System.out.println("------------------------------------------------");
        }
    }
}